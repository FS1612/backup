#include <stdlib.h>
#include <stdio.h>
#include <math.h>
#include <stdbool.h> //* inclusione variabili booleane
 int main (void){
	double a, b, c;
	float x1, x2;
	int d;
	printf("scrivi i coefficienti a,b,c:\n\n");
	scanf ("%lf", &a);
	scanf("%lf", &b);
	scanf("%lf", &c);
	
	//* equazioni incomplete
if ((a==0))
	{printf("l'equazione e' di primo grado\n\n");
	exit(0);
	  if ((b && c )==0);{
	printf("la soluzione e': 0\n\n");
	exit (0);
	  }
		if  (c==0)
		{ x1 = 0;
		x2=(-b)/a;
		printf("le soluzioni sono: %f e %f\n\n", x1, x2);
		exit(0);
}
			else if (b==0); 
			{x1= sqrtf((-c)/a);
			x2=sqrtf(c/a);
			printf("i risultati sono %lf e %lf", x1, x2);
}
if(a > 0)
{
		d=sqrt((b*b)-4*(a*c));
	printf("il discriminante vale: %d\n\n", d);
}
		if (d!=0)
			if(d>0){
			x1= (-b+d)/(2*a); 
			x2= (-b-d)/(2*a);
			printf("le soluzioni sono %f e %f\n\n", x1, x2);
			exit (0);
			}
				if(d==0)
				{
				x1= (-b+d)/(2*a);
				x2= (-b-d)/(2*a);
				printf("le soluzioni sono 2 coincidenti ossia %f e%f\n\n", x1, x2);
				exit (0);
				}
				else {
				printf("non ci sono soluzioni reali\n\n");
				exit(0);
				}
	}
 }
 
 